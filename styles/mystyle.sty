% mystyle.sty
\ProvidesPackage{mystyle}

% Margini (usa il pacchetto geometry)
\RequirePackage[margin=2.5cm]{geometry}

% Dimensione del font
\renewcommand\normalsize{\fontsize{11}{13}\selectfont}

\usepackage{styles/titlesec}
\titleformat{\section}[block]{\normalfont\Large\bfseries\centering}{\thesection}{1em}{}

\titleformat{\subsection}[block]{\normalfont\Large\bfseries\centering}{}{1em}{}

\titleformat{\subsubsection}
  {\normalfont\normalsize\bfseries\centering}
  {\thesubsubsection}{1em}{}

\RequirePackage{authblk}
\RequirePackage{etoolbox}

% Allinea a sinistra il blocco autori/affiliazioni
\Authsep_x{0.5em} % Spazio orizzontale tra autore e affiliazione (opzionale)
\renewcommand\Authands{, } % Usa la virgola invece di "and" tra gli autori
\makeatletter
\patchcmd{\AB@authors}{\centering}{\raggedright}{}{} % Sostituisce \centering con \raggedright
\patchcmd{\AB@affillist}{\centering}{\raggedright}{}{} % Fa lo stesso per le affiliazioni
\makeatother

\renewcommand\Authfont{\normalsize\bfseries}
\renewcommand\Affilfont{\small\itshape}
\setlength{\affilsep}{1em}

\makeatletter
\pretocmd{\@author}
  {\begin{flushright}\large\bfseries\gruppo\end{flushright}\par\vspace{1em}}
  {}{} % Argomenti per successo/fallimento (lasciare vuoti)
\makeatother
